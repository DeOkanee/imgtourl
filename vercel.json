{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@now/python",
      "config": { "maxLambdaSize": "25mb" },
      "env": {
        "FLASK_ENV": "production",
        "FLASK_APP": "api/app.py",
        "PYTHON_VERSION": "3.9"  
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/app.py"
    }
  ]
}
