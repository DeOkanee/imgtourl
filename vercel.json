{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "25mb" }
    }
  ],
  "routes": [
    {
      "src": "/uploads",
      "dest": "api/app.py" 
    },
    {
      "src": "/(.*)",
      "dest": "api/app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "FLASK_APP": "api.app"
  }
}
